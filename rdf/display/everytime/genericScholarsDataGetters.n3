# datagetters used by the find domain expert, find research and find organizations pages.

<freemarker:findDomainExpert.ftl> display:hasDataGetter display:conceptsDataGetter .
<freemarker:page-home.ftl> display:hasDataGetter display:conceptsDataGetter .

display:conceptsDataGetter
    a <java:edu.cornell.mannlib.vitro.webapp.utils.dataGetter.SparqlQueryDataGetter> ;
    display:saveToVar "conceptsDG" ;
    display:query """
    PREFIX rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
	PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> 
	PREFIX skos: <http://www.w3.org/2004/02/skos/core#>
	SELECT ?label
	WHERE
	{
		?s rdf:type skos:Concept .
		?s rdfs:label ?label .
	}
    ORDER BY ?label
    """ .

