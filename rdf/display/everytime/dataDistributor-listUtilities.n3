@prefix : <http://vitro.mannlib.cornell.edu/ns/vitro/ApplicationSetup#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#
# Some data requests that might be of general use.
#

:department_list_distributor
    a   <java:edu.cornell.library.scholars.webapp.controller.api.distribute.DataDistributor> ,
        <java:edu.cornell.library.scholars.webapp.controller.api.distribute.SparqlSelectDataDistributor> ;
    :actionName "departmentList" ;
    :query """
        PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
        PREFIX vivo: <http://vivoweb.org/ontology/core#>
        SELECT ?uri ?label
        WHERE {
          ?uri a vivo:AcademicDepartment ;
               rdfs:label ?label .
        }
        ORDER BY ?label
    """ .

:faculty_list_distributor
    a   <java:edu.cornell.library.scholars.webapp.controller.api.distribute.DataDistributor> ,
        <java:edu.cornell.library.scholars.webapp.controller.api.distribute.SparqlSelectDataDistributor> ;
    :actionName "facultyList" ;
    :query """
        PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
        PREFIX vivo: <http://vivoweb.org/ontology/core#>
        SELECT ?uri ?label
        WHERE {
          ?uri a vivo:FacultyMember ;
               rdfs:label ?label .
        }
        ORDER BY ?label
    """ .
