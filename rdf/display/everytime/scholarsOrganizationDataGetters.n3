@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix display: <http://vitro.mannlib.cornell.edu/ontologies/display/1.1#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix core: <http://vivoweb.org/ontology/core#> .
@prefix vivoweb: <http://vivoweb.org/ontology#> .
@prefix afn:  <http://jena.hpl.hp.com/ARQ/function#> .

 
## This may be a one-off just for the Johnson School -- because that's what we do....

<http://vivoweb.org/ontology/core#School> display:hasDataGetter display:disciplinesForSchool .
<http://xmlns.com/foaf/0.1/Organization> display:hasDataGetter display:deptAndCollegeOptIn .
 
## define the datagetter ##

display:disciplinesForSchool
    a <java:edu.cornell.mannlib.vitro.webapp.utils.dataGetter.SparqlQueryDataGetter>;
    display:saveToVar "schoolDisciplines";
    display:query 
        """
        PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
        PREFIX core: <http://vivoweb.org/ontology/core#>
        PREFIX vivoc:   <http://scholars.cornell.edu/ontology/vivoc.owl#>
        PREFIX hr: <http://scholars.cornell.edu/ontology/hr.owl#>

        SELECT DISTINCT 
            ?discipline 
            ?disciplineName 
        WHERE
        {
            ?individualURI core:relatedBy ?position .
            ?position a core:Position .
            OPTIONAL
            {
            ?position hr:positionIn ?discipline .
            ?discipline a vivoc:Discipline .
            ?discipline rdfs:label ?disciplineName .
            }

        } ORDER BY ?disciplineName
        """ .

display:deptAndCollegeOptIn
    a <java:edu.cornell.mannlib.vitro.webapp.utils.dataGetter.SparqlQueryDataGetter>;
    display:saveToVar "orgOptIn";
    display:query 
        """
		PREFIX rdfs:     <http://www.w3.org/2000/01/rdf-schema#>
		PREFIX vivo: <http://vivoweb.org/ontology/core#>
		PREFIX obo:      <http://purl.obolibrary.org/obo/>
		PREFIX vivoc:    <http://scholars.cornell.edu/ontology/vivoc.owl#>
		
		SELECT (group_concat (?parent; separator=" ") AS ?parentOrgOptIn) (group_concat (?individual; separator=" ") AS ?individualOptIn)
		WHERE
		{
		  ?individualURI rdfs:label ?label .
		  OPTIONAL {?individualURI vivoc:isOptIn  ?indOptIn . }
		  ?individualURI obo:BFO_0000050 ?parentOrg .
		  OPTIONAL {?parentOrg vivoc:isOptIn  ?parentOptIn . }
		  bind(COALESCE(?indOptIn, "blank") as ?individual)
		  bind(COALESCE(?parentOptIn, "blank") as ?parent)
		}
        """ .



